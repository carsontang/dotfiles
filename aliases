# Command line
alias cdh="cd ~"
alias cdp="cd .."
alias l="ls -ahl"
alias ltr="ls -hltr"
alias s="source ~/.bash_profile"

# Git
alias s="git status"
alias a="git add"
alias aa="git add --all"
alias gb="git branch"
alias gbd="git branch --delete"
alias ci="git commit -m"
alias d="git diff"
alias f="git fetch"
alias gl='git log --pretty=format:"%h %ad (%ar) | %s%d [%an]" --graph --date=short'
alias gl1='gl -1'
alias gm="git merge"
alias go="git checkout"
alias gob="git checkout -b"
alias gom="git checkout master"
alias psh="git push"
alias p="git pull --rebase"
alias gr="git rebase"
alias gsh="git show"
alias gst="git staged" # requires the presence of ~/code/dotfiles/gitconfig
alias gu="git unstage" # requires the presence of ~/code/dotfiles/gitconfig

# Ruby/Rails
alias i="irb"
alias b="bundle"
alias be="bundle exec"
alias bi="bundle install"
alias rk="RAILS_ENV=development bundle exec rake"
alias rkdm="bundle exec rake db:migrate"

# ShareFi
alias sf="cd ~/code/sharefi"
