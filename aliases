# Command line
alias cdh="cd ~"
alias cdp="cd .."
alias l="ls -ahl"
alias ltr="ls -hltr"
alias s="source ~/.bash_profile"

# Colorize
alias grep="grep --color=auto"
alias ls='ls -G'

# Reference: http://linux-sxs.org/housekeeping/lscolors.html
# di - directory, cyan
# fi - file, normal
# ln - symbolic link, light purple
# pi - fifo file, yellow
# or - orphan symbolic link, red
# ex - executable, green
# Bash, Java, C++, C, Python, CUDA files - light green
LS_COLORS='di=0;36:fi=0:ln=95:pi=33:so=5:bd=5:cd=5:or=31:mi=0:ex=32:*.sh=4:*.java=4:*.cpp=4:*.c=4:*.cu=4:*.py=4'
export LS_COLORS

# Git
alias s="git status"
alias a="git add"
alias aa="git add --all"
alias gb="git branch"
alias gbd="git branch --delete"
alias gc="git commit -m"
alias d="git diff"
alias f="git fetch"
alias gl='git log --pretty=format:"%h %ad (%ar) | %s%d [%an]" --graph --date=short'
alias gl1='gl -1'
alias gm="git merge"
alias go="git checkout"
alias gob="git checkout -b"
alias gom="git checkout master"
alias gpsh="git push"
alias gp="git pull --rebase"
alias gr="git rebase"
alias gsh="git show"
alias gst="git diff --cached" # requires the presence of ~/code/dotfiles/gitconfig
alias gu="git unstage" # requires the presence of ~/code/dotfiles/gitconfig

# Ruby/Rails
alias i="irb"
alias b="bundle"
alias be="bundle exec"
alias bi="bundle install"
alias rk="RAILS_ENV=development bundle exec rake"
alias rkdm="bundle exec rake db:migrate"

# Temperature of CPU and GPU
alias cputemp='watch -n1 "sensors"'
alias gputemp='watch -n1 "nvidia-smi -q -d temperature"'
